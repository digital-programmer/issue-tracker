<link rel="stylesheet" href="/css/issue.css">

<div class="issue-item" id="issue-<%= issue._id %>">
    <div class="flex space-between valign">
        <h3>
            <%= issue.title %>
        </h3>
        <form action="/resolve-issue" method="post">
            <button type="submit">Resolve</button>
        </form>
    </div>
    <div class="issue-item-details flex space-between">
        <span style="max-width: 60%;">
            <%= issue.description %>
        </span>
        <span>
            <%= issue.createdAt.toLocaleString() %>
        </span>
    </div>
    <div class="label-container flex wrap valign">
        <% for (label of issue.labels) { %>
            <span>
                <%= label %>
            </span>
            <% } %>
    </div>
</div>